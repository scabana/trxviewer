{
  "scripts": {
    "webpack:dev": "webpack",
    "webpack:prod": "webpack --mode=production",
    "fontend-watch": "webpack --watch",
    "lint": "eslint . --ext .ts,.tsx,.vue",
    "test:unit": "jest"
  },
  "dependencies": {
    "@microsoft/fast-components": "^1.12.0",
    "@types/vscode": "^1.51.0",
    "lodash-es": "^4.17.15",
    "vue": "^2.6.12",
    "vue-class-component": "^7.2.6",
    "vue-fragment": "^1.5.1",
    "vue-property-decorator": "^9.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "@vue/test-utils": "^1.1.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^26.6.3",
    "copyfiles": "^2.4.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.0.0",
    "eslint-plugin-vue": "^7.0.0",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "mkdirp": "^1.0.4",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "typescript": "^4.1.2",
    "vue-jest": "^3.0.7",
    "vue-loader": "^15.9.5",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.12",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.js?$": "babel-jest",
      "^.+\\.vue?$": "vue-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testURL": "http://localhost/",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(@microsoft/(fast-components|fast-element|fast-foundation|fast-web-utilities|fast-colors)|lodash-es|exenv-es6))"
    ],
    "setupFiles": [
      "./src/testSetup.ts"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "./../../out",
          "outputName": "testresults.xml"
        }
      ]
    ]
  }
}
